@model  IEnumerable<ShopOnlineConnection.SanPham>

<div class="row">
    <div class="col-lg-12">
        <div class="heading">
            <h2 class="text-center"> [ NEW ARRIVALS ] </h2>
            <p class="text-center">HOT ITEMS</p>
        </div>
        <div class="products">
            @foreach (var item in Model)
            {

                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="product">
                        <div class="image"><a href="@Url.Action("Details","Shop", new { id = @item.MaSanPham })" ><img src="~/Asset/images/@item.HinhChinh" /></a></div>
                        <div class="buttons">
                            <a class="btn cart" href="#"><span class="glyphicon glyphicon-shopping-cart"></span></a>
                          
                        </div>
                        <div class="caption">
                            <div class="name"><h3><a href="@Url.Action("Details","Shop", new { id = @item.MaSanPham })">@item.TenSanPham</a></h3></div>
                            <div class="price">@item.Gia VNĐ</div>
                          
                        </div>
                    </div>
                </div>
            }
        
        </div>
    </div>
</div>
