@model  IEnumerable<ShopOnlineConnection.SanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<h2>Index</h2>

<style>
    table {
        border-collapse: collapse;
        width: 50%;
        margin: auto;
    }

    th, td {
        text-align: center;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #5d5e63;
    }

    th {
        background-color: #2a9fd6;
        color: white;
    }
</style>
<table>
    <tr>
        <th>Mã Sản Phẩm</th>
        <th>Tên Sản Phẩm</th>
        <th>Hình Ảnh</th>
        <th>Tình Trạng</th>
        <th colspan="2">
            <a href="@Url.Action("Create","SanPhamAdmin")"><img style="max-width:40px;max-height:40px" src="~/Asset/img/add.png" /></a>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MaSanPham</td>
            <td>@item.TenSanPham</td>
            <td>@item.TinhTrang</td>
            <td><img src="~/Asset/img/@item.HinhChinh" style="width:20px;height:20px;"/></td>
            <td><a href="@Url.Action("Edit","SanPhamAdmin",new { id = @item.MaSanPham })"><img style="max-width:40px;max-height:40px" src="~/Asset/images/edit.png" /></a></td>
            <td><a href="@Url.Action("Delete","SanPhamAdmin",new { id = @item.TenSanPham })"><img style="max-width:40px;max-height:40px" src="~/Asset/images/delete1.png" /></a></td>
        </tr>
    }

</table>