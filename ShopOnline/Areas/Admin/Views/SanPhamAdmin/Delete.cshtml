@model  ShopOnlineConnection.SanPham
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<h2>Delete</h2>
<style>
    input [type-text] {
        width: 100%;
        height: 40px;
        background: black;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ff0000;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input [type-number] {
        width: 100%;
        height: 40px;
        background: black;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ff0000;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input [type-submit] {
        width: 100%;
        background-color: #2a9fd6;
        color: black;
        padding: 14px 20px;
        margin: 8px 0;
        display: inline-block;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        input [type-submit]:hover {
            background-color: #45a049;
        }
</style>
@using (Html.BeginForm("Delete", "SanPhamAdmin", FormMethod.Post))

{
    <table style="width:80%; margin:auto; background:black;">
        <tr>
            <td> Mã Sản Phẩm</td>
            <td> <input style="width:300px; float:left; height:35px" maxlength="11" type="text" name="MaSanPham" value="@Model.MaSanPham" required readonly /></td>
            <td rowspan="8">
                <div>
                    <img id="target" class="img" src="~/Asset/img/@Model.HinhChinh" alt="your image" style="float:right;width:320px;height:300px" />
                </div>
            </td>
        </tr>

        <tr>
            <td> Mã Loại Sản Phẩm</td>
            <td>
                @Html.DropDownList("MaLoaiSanPham", null, new { @style = "float:left;width:300px; background:black; height:30px;" })
            </td>
        </tr>

        <tr>
            <td> Tên Sản Phẩm</td>
            <td>
                <input style="width:300px; float:left; height:35px" maxlength="11" type="text" value="@Model.TenSanPham" required readonly />
            </td>
        </tr>

        @*<tr>
                <td> Hình </td>
                <td> <input id="file_Hinh" onchange="previewFile();" style="float:left" type="file" name="HinhChinh" required readonly /></td>
            </tr>*@

        <tr>
            <td> Giá </td>
            <td> <input style="width:300px;float:left" type="number" value="@Model.Gia" required readonly /></td>
        </tr>

        <tr>
            <td> Ghi Chú </td>
            <td> <input style="width:300px;float:left" type="text" value="@Model.GhiChu" required readonly /></td>
        </tr>

        <tr>
            <td> Nhà Sản Xuất </td>
            <td>
                @*@Html.DropDownList("MaNhaSanXuat", null, new { @style = "float:left;width:300px;" });*@
            </td>
        </tr>

        <tr>
            <td colspan="3">
                <input style="height:40px;width:300px;margin-left:32%; background:#016ABC; color:#fff; border: 1px solid #eee;  border-radius:20px;
    box-shadow:5px 5px 5px #eee;" type="submit" name="btn_ThemSanPham" value="Xác Nhận Khóa" />
            </td>
        </tr>
    </table>
}